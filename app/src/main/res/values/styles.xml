<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--styles for profile-->


    <style name="reportHeader">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="reportButton">
        <item name="android:layout_margin">12dp</item>
        <item name="android:text">Proceed</item>
        <item name="backgroundTint">@color/title_color</item>
    </style>

    <style name="reportButton2">
        <item name="android:layout_margin">12dp</item>
        <item name="android:text">Submit</item>
        <item name="backgroundTint">@color/title_color</item>
    </style>

    <style name="reviewLayout">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="monthlyReport">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>
    <style name="reportEditbox">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:hint">@string/comment</item>
        <item name="android:inputType">textPersonName</item>
    </style>
</resources>